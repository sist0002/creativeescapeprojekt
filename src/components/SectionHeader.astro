---
const { eyebrow = "FEATURED ARTICLES", headline = "UPCOMING" } = Astro.props;
---
<section class="head">
  <h3 class="eyebrow">{eyebrow}</h3>
  <div class="rule" aria-hidden="true"></div>
  <h2 class="headline">{headline}</h2>
</section>

<style>
  .head{display:flex;flex-direction:column;align-items:flex-start;gap:8px;margin:0 auto 28px;max-width:1200px}
  .eyebrow{font:600 12px/1.2 system-ui,sans-serif;letter-spacing:.06em;text-transform:uppercase;opacity:.9;margin:0}
  .rule{width:100%;height:2px;background:currentColor;opacity:.5}
  .headline{font:800 clamp(28px,4vw,44px)/1.1 system-ui,sans-serif;margin:0}
</style>
