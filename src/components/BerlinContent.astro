---
import FeaturedUpcoming from "./FeaturedUpcoming.astro";
import FeaturedSection from "./FeaturedSection.astro";
import FeaturedSimple from "./FeaturedSimple.astro";
import Footer from "./Footer.astro";

// FREE-listen
import HausSchImg from "../assets/hausschwarzenberg_314x174.jpg";
import DanceImg from "../assets/dancesmall.png";
import FogImg from "../assets/fog-sculpture_314x174.jpg";
import BoothImg from "../assets/boothsmall.png";

// UPCOMING 
import BerlinSeptImg from "../assets/photobooth.png";
import KreuzbergStreetArtImg from "../assets/photobooth.png";
import OpenAirCinemaImg from "../assets/photobooth.png";

// NOT THIS 
import Placeholder2Img from "../assets/sommerdansweb.png";
import KreuzbergCanalsImg from "../assets/booth2.png";
import Courtyard from "../assets/courtyard1.png";

const upcomingItems = [
  {
    title: "Happening in Berlin – September 2025",
    href: "/berlin-september-2025",
    imgSrc: BerlinSeptImg,
    imgAlt: "Berlin event collage",
    tags: ["BERLIN"],
  },
  {
    title: "Street Art walk in Kreuzberg",
    href: "/kreuzberg-street-art",
    imgSrc: KreuzbergStreetArtImg,
    imgAlt: "Kreuzberg street art",
    tags: ["BERLIN"],
  },
  {
    title: "Open-air cinema nights",
    href: "/open-air-cinema",
    imgSrc: OpenAirCinemaImg,
    imgAlt: "Open air cinema",
    tags: ["BERLIN"],
  },
];

const freeBerlinItems = [
  {
    title: "Discover Berlin's charming dancing spots",
    href: "/danceberlin",
    imgSrc: DanceImg,
    imgAlt: "People dancing",
    tags: ["FREE", "BERLIN"],
  },
  {
    title: "An immersive experience - Fujiko Nakaya's fog sculptures",
    href: "/fog-sculptures-berlin",
    imgSrc: FogImg,
    imgAlt: "Fog sculpture",
    tags: ["FREE", "BERLIN"],
  },
  {
    title: "Capture these retro analogue photobooths",
    href: "/booth",
    imgSrc: BoothImg,
    imgAlt: "Berlin photobooth",
    tags: ["FREE", "BERLIN"],
  },
  {
    title: "A little piece of street art paradise",
    href: "/haus-schwarzenberg",
    imgSrc: HausSchImg,
    imgAlt: "Haus Schwarzenberg street art",
    tags: ["FREE", "BERLIN"],
  },
];

const notThisItems = [
  {
    title: "Not Potsdamer Platz... but Outdoor Courtyards",
    href: "/outdoor-courtyards",
    imgSrc: Placeholder2Img,
    imgAlt: "Quiet courtyard",
    tags: ["TIPS"],
  },
  {
    title: "Not Checkpoint Charlie… but Kreuzberg Canals",
    href: "/kreuzberg-canals",
    imgSrc: KreuzbergCanalsImg,
    imgAlt: "Kreuzberg canals",
    tags: ["TIPS"],
  },
  {
    title: "Not TV Tower… but Teufelsberg Views",
    href: "/teufelsberg-views",
    imgSrc: Courtyard,
    imgAlt: "Teufelsberg",
    tags: ["TIPS"],
  },
];
---
<!-- Sektion 1 -->
<FeaturedUpcoming
  eyebrow="FEATURED ARTICLES"
  headline="UPCOMING"
  items={upcomingItems}
  bg="#d4552a"
/>

<!-- Sektion 2 -->
<FeaturedSection
  eyebrow="FEATURED ARTICLES"
  headline="FREE ACTIVITIES IN BERLIN"
  items={freeBerlinItems}
  bg="#ffffff"
  color="#111111"
  cols={4}
/>

<!-- Sektion 3 -->
<FeaturedSimple
  headline="NOT THIS → BUT THAT"
  items={notThisItems}
  bg="#2a5df5"
  color="#ffffff"
/>

<!-- Footer -->
<Footer marqueeText="NEWSLETTER+++" bg="#000" color="#fff" />
