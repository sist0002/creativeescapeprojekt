---
import ArticleCard from "./ArticleCard.astro";
// Props: items = [{ title, href, imgSrc, imgAlt, tags }]
const { items = [] } = Astro.props;
---
<div class="grid">
    {items.map((it: any) => (
        <ArticleCard {...it} />
      ))}
</div>


<style>
.grid {
max-width: 1200px;
margin: 24px auto 0;
display: grid;
gap: 28px;
grid-template-columns: 1fr;
}
@media (min-width: 800px) {
.grid { grid-template-columns: repeat(3, 1fr); }
}
</style>