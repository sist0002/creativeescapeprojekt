---
import ArticleCard from "./ArticleCard.astro";
import type { ImageMetadata } from "astro";

type Item = {
  title: string;
  href?: string;
  imgSrc?: string | ImageMetadata; // ← accepter begge typer
  imgAlt?: string;
  tags?: string[];
};

interface Props {
  items: Item[];
  cols?: number; // antal kolonner på desktop
}

const { items = [], cols = 3 }: Props = Astro.props;

// Normaliser imgSrc til string (ArticleCard forventer string)
type NormalizedItem = Omit<Item, "imgSrc"> & { imgSrc?: string };
const normalizedItems: NormalizedItem[] = items.map((it) => ({
  ...it,
  imgSrc: typeof it.imgSrc === "string" ? it.imgSrc : it.imgSrc?.src,
}));
---
<div class="grid" style={`--cols:${cols}`}>
  {normalizedItems.map((it) => <ArticleCard {...it} />)}
</div>

<style>
  .grid {
    max-width: 1200px;
    margin: 24px auto 0;
    display: grid;
    gap: 28px;
    grid-template-columns: 1fr;            /* mobil */
  }
  @media (min-width: 700px) {
    .grid { grid-template-columns: repeat(2, 1fr); }  /* tablet */
  }
  @media (min-width: 1024px) {
    .grid { grid-template-columns: repeat(var(--cols), 1fr); } /* desktop */
  }
</style>
