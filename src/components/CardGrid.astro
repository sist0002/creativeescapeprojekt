---
import ArticleCard from "./ArticleCard.astro";
import type { ImageMetadata } from "astro";

type Item = {
  title: string;
  href?: string;
  imgSrc?: string | ImageMetadata; // ‚Üê union
  imgAlt?: string;
  tags?: string[];
};

interface Props {
  items: Item[];
  cols?: number;
}

const { items = [], cols = 3 }: Props = Astro.props;
---
<div class="grid" style={`--cols:${cols}`}>
  {items.map((it) => <ArticleCard {...it} />)}
</div>

<style>
  .grid {
    max-width: 1200px;
    margin: 24px auto 0;
    display: grid;
    gap: 28px;
    grid-template-columns: 1fr;
  }
  @media (min-width: 700px) {
    .grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (min-width: 1024px) {
    .grid { grid-template-columns: repeat(var(--cols), 1fr); }
  }
</style>
