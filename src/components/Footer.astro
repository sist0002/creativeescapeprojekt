---
/**
 * Komplett footer MED newsletter-marquee.
 * Ens padding som de andre sektioner (48px 24px).
 */
const {
  marqueeText = "NEWSLETTER+++",
  bg = "#000",
  color = "#fff",
  maxWidth = "1200px",
  title = "DESIGN NEWS TO YOUR INBOX",
} = Astro.props;
import GapBig from "./GapBig.astro";
import Gap from "./Gap.astro";
---

<footer class="footer" style={`--bg:${bg}; --color:${color}; --max:${maxWidth}`}>
  <!-- Marquee (Ã‰N linje) -->
  <div class="marquee">
    <div class="track" aria-hidden="true">
      <span class="item">{marqueeText}</span><span class="item">{marqueeText}</span>
      <span class="item">{marqueeText}</span><span class="item">{marqueeText}</span>
      <span class="item">{marqueeText}</span><span class="item">{marqueeText}</span>
      <span class="item">{marqueeText}</span><span class="item">{marqueeText}</span>
      <span class="item">{marqueeText}</span><span class="item">{marqueeText}</span>
    </div>
  </div>
  <Gap />
  <!-- Sektionens indhold -->
  <div class="wrap">
    <div class="inner">
      <div class="content">
        <h1 class="headline">{title}</h1>

        <form class="form" action="#" method="post" onsubmit="return false">
          <label class="sr-only" for="newsletter-email">Email</label>
          <input id="newsletter-email" name="email" type="email" placeholder="Email" required />
          <button type="submit">SIGN UP</button>
        </form>
      </div>
      <GapBig />
      <div class="bottom">
        <div class="brand">CREATIVE ESCAPE</div>

        <nav class="social" aria-label="Social links">
          <!-- Instagram (ren hvid) -->
          <a
            href="https://instagram.com"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
            class="icon">
            <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
              <path
                fill="currentColor"
                d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5zm0 2a3 3 0 0 0-3 3v12a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3H7zm5 3.5a5.5 5.5 0 1 1 0 11 5.5 5.5 0 0 1 0-11zM18 5.75a1.25 1.25 0 1 1 0 2.5 1.25 1.25 0 0 1 0-2.5z"
              ></path>
            </svg>
          </a>
          <!-- YouTube (ren hvid) -->
          <a
            href="https://youtube.com"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="YouTube"
            class="icon">
            <svg viewBox="0 0 24 24" width="22" height="22" aria-hidden="true">
              <path
                fill="currentColor"
                d="M23.5 6.2a3.1 3.1 0 0 0-2.2-2.2C19.8 3.5 12 3.5 12 3.5s-7.8 0-9.3.5A3.1 3.1 0 0 0 .5 6.2 49 49 0 0 0 0 12a49 49 0 0 0 .5 5.8 3.1 3.1 0 0 0 2.2 2.2c1.5.5 9.3.5 9.3.5s7.8 0 9.3-.5a3.1 3.1 0 0 0 2.2-2.2A49 49 0 0 0 24 12a49 49 0 0 0-.5-5.8zM9.6 15.3V8.7l6.2 3.3-6.2 3.3z"
              ></path>
            </svg>
          </a>
        </nav>

        <div class="spacer" aria-hidden="true"></div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Base */
  .footer {
    background: var(--bg);
    color: var(--color);
  }

  /* Marquee (Ã‰N linje) */
  .marquee {
    background: var(--bg);
    color: var(--color);
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    overflow: hidden;
  }
  .track {
    display: inline-flex;
    gap: 6rem;
    white-space: nowrap;
    will-change: transform;
    padding: 10px 0;
    animation: scroll 16s linear infinite;
  }
  .item {
    font:
      700 14px/1.2 system-ui,
      sans-serif;
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }
  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
  @media (prefers-reduced-motion: reduce) {
    .track {
      animation: none;
    }
  }

  /* ðŸ”’ Samme padding som andre sektioner */
  .wrap {
    padding: 48px 24px !important;
    background: var(--bg);
    color: var(--color);
    box-sizing: border-box;
  }

  /* Inder-container sÃ¥ det liner op med resten */
  .inner {
    max-width: var(--max);
    margin-inline: auto;
  }

  /* Top: headline + form (form til hÃ¸jre pÃ¥ desktop) */
  .content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
    align-items: center;
  }
  @media (min-width: 960px) {
    .content {
      grid-template-columns: 1fr auto;
      gap: 24px;
    }
  }

  /* Moderat stor overskrift â€“ ikke overdreven */
  .headline {
    margin: 0;
    font:
      900 clamp(22px, 3.2vw, 34px) / 1.15 system-ui,
      sans-serif;
    text-transform: uppercase;
  }

  .form {
    display: flex;
    gap: 8px;
    align-items: center;
  }
  .form input {
    width: min(48vw, 360px);
    padding: 12px 14px;
    border: 1px solid #fff;
    background: #fff;
    color: #000;
    border-radius: 0;
    outline: none;
  }
  .form button {
    padding: 12px 16px;
    border: 1px solid #fff;
    background: #fff;
    color: #000;
    font:
      700 12px/1 system-ui,
      sans-serif;
    text-transform: uppercase;
    border-radius: 0;
    cursor: pointer;
  }
  .form button:hover {
    filter: brightness(0.92);
  }

  /* Bund: brand venstre, sociale links centreret */
  .bottom {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 12px;
    margin-top: 28px;
  }
  .brand {
    font:
      700 12px/1.2 system-ui,
      sans-serif;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    justify-self: start;
  }
  .social {
    display: flex;
    gap: 16px;
    justify-self: center;
  }
  .icon {
    display: inline-flex;
    color: #fff;
    text-decoration: none;
  }
  .icon:visited {
    color: #fff;
  }
  .icon svg {
    fill: currentColor;
  }
  .icon:hover {
    opacity: 0.85;
  }
  .spacer {
    justify-self: end;
  }

  /* A11y â€“ skjult label til screenreaders */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }
</style>
