<!-- Sektion 1 -->
<FeaturedUpcoming
  eyebrow="FEATURED ARTICLES"
  headline="UPCOMING"
  items={upcomingItems}
  bg="#d4552a"
/>

<!-- Sektion 2 -->
<FeaturedSection
  eyebrow="FEATURED ARTICLES"
  headline="FREE ACTIVITIES IN COPENHAGEN"
  items={freeCphItems}
  bg="#ffffff"
  color="#111111"
  cols={4}
/>

<!-- Sektion 3 -->
<FeaturedSimple
  headline="NOT THIS → BUT THAT"
  items={notThisItems}
  bg="#2a5df5"
  color="#ffffff"
/>

<!-- Footer -->
<Footer marqueeText="NEWSLETTER+++" bg="#000" color="#fff" />
