---
import FeaturedUpcoming from "./FeaturedUpcoming.astro";
import FeaturedSection from "./FeaturedSection.astro";
import FeaturedSimple from "./FeaturedSimple.astro";
import Footer from "./Footer.astro";

import byhavenImg from "../assets/Byhaven.jpg";
import fog from "../assets/fog.jpg";

/* Dummy data – nu sat til Copenhagen */
const upcomingItems = [
  {
    title: "Free concerts at fr vesterbro all september long",
    href: "/byhaven",
    imgSrc: byhavenImg,            // ← brug import-variablen
    imgAlt: "Byhaven concerts",
    tags: ["FREE"],
  },
  { title: "Let’s Dance!", href: "/lets-dance", imgSrc: "/assets/free-dance.jpg", imgAlt: "People dancing", tags: ["FREE"] },
  { title: "Release party – Ekko Villa Kultur.", href: "/ekko-release", imgSrc: fog, imgAlt: "Fog sculpture", tags: ["FREE"] },
];


const freeCphItems = [
  { title: "K7-Week: Copenhagen’s budget friendly culture hack", href: "/k7week", imgSrc: "/assets/k7week.jpg", imgAlt: "K7 Week", tags: ["FREE","COPENHAGEN"] },
  { title: "Free concerts at Byhaven vesterbro all september long.", href: "/byhaven", imgSrc: "/assets/byhaven.jpg", imgAlt: "Byhaven concerts", tags: ["FREE","COPENHAGEN"] },
  { title: "Let’s Dance!", href: "/lets-dance", imgSrc: "/assets/free-dance.jpg", imgAlt: "People dancing", tags: ["FREE","COPENHAGEN"] },
  { title: "Christianshavn Beboerhus", href: "/beboerhus", imgSrc: "/assets/beboerhus.jpg", imgAlt: "Christianshavn Beboerhus", tags: ["FREE","COPENHAGEN"] },
];

const notThisItems = [
  { title: "Not Strøget... But Nørrebro", href: "/norrebro", imgSrc: "/assets/norrebro.jpg", imgAlt: "Nørrebro" },
